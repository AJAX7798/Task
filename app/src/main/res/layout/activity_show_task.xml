<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context="com.tasks.ajax.tasks.ShowTask">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edittaskbutton">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/showdonetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:layout_alignTop="@+id/textView32"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/textView32"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView30"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView36"
                android:layout_marginTop="15dp"
                android:fontFamily="casual"
                android:text="Time done:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView30"
                android:layout_marginLeft="20dp"
                android:fontFamily="casual"
                android:layout_toRightOf="@+id/textView30"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView20"
                android:fontFamily="casual"
                android:layout_below="@+id/showdetails"
                android:layout_marginTop="28dp"
                android:text="Status:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showremember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView22"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView22"
                android:fontFamily="casual"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView20"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView28"
                android:fontFamily="casual"
                android:layout_marginTop="23dp"
                android:text="ReminderTime:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/imageback"
                android:padding="10dp"
                app:srcCompat="@drawable/imageback" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imageView4"
                android:isIndicator="true"
                android:rating="3"
                android:scaleX="0.8"
                android:scaleY="0.8" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ratingBar2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="casual"
                android:text="Title:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="147dp"
                android:text="Group:"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showtaskname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView18"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView18"
                android:text="TextView"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:fontFamily="casual"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView22"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView22"
                android:layout_marginTop="24dp"
                android:text="Deadline:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showdeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView24"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView24"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView24"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView24"
                android:layout_marginTop="28dp"
                android:text="Details:"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView26"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/textView24"
                android:text="TextView"
                android:textColor="@color/white"
                android:fontFamily="casual"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textView20"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="20dp"
                android:text="StartTime:"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showsettime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView28"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/textView28"
                android:text="TextView"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showcatname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView20"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView20"
                android:text="TextView"
                android:fontFamily="casual"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/edittaskbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="casual"
        android:text="Edit"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/deletetaskbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittaskbutton"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_dark"
        android:fontFamily="casual"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/donetaskbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deletetaskbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@color/colorAccent"
        android:fontFamily="casual"
        android:text="Task Done!"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</RelativeLayout>
