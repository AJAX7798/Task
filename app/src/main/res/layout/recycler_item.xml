<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shafaf"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemcare"
        android:layout_toEndOf="@+id/itemicon"
        android:layout_toRightOf="@+id/itemicon"
        android:text="شروع کار"
        android:textColor="@color/consta"
        android:background="@drawable/constback"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/itemstart"
        android:layout_toLeftOf="@+id/itemname"
        android:layout_toStartOf="@+id/itemname"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <TextView
        android:id="@+id/itemdeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemstart"
        android:layout_alignStart="@+id/itemstart"
        android:layout_below="@+id/imageView5"
        android:layout_gravity="fill"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:text="1397/05/18-23:20"
        android:background="@drawable/constback"
        android:textColor="@color/consta"
        android:textSize="18sp" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/itemdeadline"
        android:layout_marginTop="5dp"
        android:background="#484848"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/doneshower"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/itemcare"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/textView23"
        android:layout_toStartOf="@+id/textView23"
        app:srcCompat="@drawable/taskdoneicon" />

    <TextView
        android:id="@+id/itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemicon"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/itemicon"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/itemicon"
        android:layout_weight="1"
        android:text="ss"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemcare"
        android:layout_gravity="fill"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="1397/05/18-23:20"
        android:background="@drawable/constback"
        android:textColor="@color/consta"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/itemicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/imageback" />

    <TextView
        android:id="@+id/itemid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/itemcare"
        android:layout_toEndOf="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_weight="1"
        android:visibility="gone" />

    <RatingBar
        android:id="@+id/itemcare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/itemname"
        android:layout_weight="1"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="1"
        android:scaleX="-0.65"
        android:scaleY="0.65"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:text="مهلت"
        android:textColor="@color/consta"
        android:background="@drawable/constback"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/textView23"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/itemstart"
        android:layout_marginRight="10dp"
        android:text="وضعیت:"
        android:textColor="@color/consta"
        android:background="@drawable/constback"
        android:textSize="20sp" />

</RelativeLayout>